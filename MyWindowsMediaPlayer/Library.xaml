<Window x:Class="MyWindowsMediaPlayer.Library"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library" Height="500" Width="900">
    <Grid>
        <ListView Height="461" HorizontalAlignment="Left" Name="libList" VerticalAlignment="Top" Width="890" SelectionChanged="Select_Element" >
            <ListView.View>
                <GridView AllowsColumnReorder="false">
                    <GridViewColumn DisplayMemberBinding=
                          "{Binding setTitle}" 
                      Header="Title" Width="300"/>
                    <GridViewColumn DisplayMemberBinding=
                          "{Binding setArtist}" 
                      Header="Artist" Width="300" />
                    <GridViewColumn DisplayMemberBinding=
                          "{Binding setAlbum}" 
                      Header="Album" Width="300"/>
                </GridView>

            </ListView.View>
        </ListView>
    </Grid>
</Window>
